<%- include('../partials/header')%>
<%- include('../partials/navbar')%>

<main class="container mt-5" style="margin-top:10%">
   
    <%-include('../partials/flash')%>
        <%#if( message && message.length){ %> 
           <!-- <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%#=success%>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div> -->
          <%# } %>  
        
<div class="row"  style="margin-top:6%">
    <div class="col-lg-6">
        <div class="card" style="width: 25rem;">
            <img src="<%=product.img%>" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%=product.name%></h5>
              <p class="card-text"><%=product.desc%></p>
               <h5 class="card-title"><%=product.price%></h5>
              <a href="#" class="btn btn-primary">Buy Now</a>
              <form action="/cart/<%=product._id%>/add" class="d-inline-block" method="POST">
                <button type="submit" class="btn btn-secondary btn-small">Add To Cart</button>
              </form>
             
              <a href="/products/<%=product._id%>/edit" class="btn btn-info btn-small">Edit</a>
            
              <form class="d-inline-block" action="/products/<%=product._id%>/delete?_method=DELETE" method ="post">
                <button type="submit" class="btn btn-danger btn-small">Delete</button>
                </form>
            </div>
          </div>
    </div>
    <div class="col-lg-4">
        <h1 class="display-6">Leave a Review</h1>
        <div class="mb-3">
            <form action="/products/<%=product._id%>/review" method="post">
               
                <fieldset class="starability-basic">
                    <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
                    <input type="radio" id="first-rate1" name="rating" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="rating" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="rating" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="rating" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="rating" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                  </fieldset>








                <div class="mb-3">
                    <label for="comment" class="form-label">Comment</label>
                    <textarea class="form-control" name="comment" id="comment" rows="3"></textarea>
                </div>
                <button class="btn btn-small btn-success">Submit</button>
            </form>

            <div class="mb-3 ">
           <%for(let review of product.reviews){%>
            <div class="card mt-2">
                <div class="card-body">
                <h5 class="card-title">
                    <p class="starability-result" data-rating="<%=review.rating%>">
                    Rated: <%=review.rating%> stars
                    </p>
                </h5>
                  <p class="card-text fw-light text-capitalize"> By:<%=review.user%></p>
                  <p class="card-text"><%=review.comment%></p>
                  <a href="#" class="btn btn-small btn-danger">Delete</a>
                </div>
              </div>
           <%}%>
            </div>

        </div>
    </div>
</div>
</main>

<%-include('../partials/footer')%>