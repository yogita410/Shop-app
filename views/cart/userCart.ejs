<%- include('../partials/header')%>
<%- include('../partials/navbar')%>

<main class="container mt-5" style="margin-top:10%">
   
    <%-include('../partials/flash')%>
        <%#if( message && message.length){ %> 
           <!-- <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%#=success%>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div> -->
          <%# } %>  
        <h1 class="display-5"  style="margin-top:6%">My Cart</h1>
<div class="row" >
    <div class="col-lg-6">
      <% for(let item of user.cart){ %> 
        
        <div class="card mb-3 mx-auto" style="max-width: 540px;">
            <div class="row g-0">
              <div class="col-md-4">
                <img src="<%=item.img%>" class="img-fluid rounded-start"  >
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h5 class="card-title"><%=item.name %></h5>
                  <h5 class="card-title">Rs.<%=item.price %></h5>
                  <p class="card-text"><small class="text-muted"><%=item.desc%></small></p>
                    <form action="/cart/<%=item._id%>/remove?_method=DELETE" method="POST">
                      <button class="btn btn-sm btn-danger">Remove</button>
                    </form>
                </div>
              </div>
            </div>
          </div>

        <% } %> 
    </div>
    <div class="col-lg-4">
        <% let totalAmount =0%>
        <h1 class="display-6">Items</h1>
        <ul class="list-group mx-auto">
            <% for(let item of user.cart){ %> 
                <% totalAmount+=item.price %> 
                <li class="list-group-item">
                    <span class="fw-bold"><%= item.name%> :</span>
                     &NonBreakingSpace;
                     <span>Rs. <%= item.price %></span>
                 </li>

            <% } %> 
            <li class="list-group-item">
                <span class="fw-bold">Total Amount :</span>
                 &NonBreakingSpace;
                <span>Rs. <%= totalAmount %></span>
            </li>
        </ul>

       
       
    <div class="mb-3 mt-3">
    <form action="">
        <button type="submit" class="btn btn-success">Proceed To pay</button>
    </form>
    </div>
       
    </div>
</div>
</main>

<%-include('../partials/footer')%>